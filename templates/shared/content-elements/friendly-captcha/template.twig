{% apply spaceless %}
    {% set friendlycaptchaElementId = elementId ?: 'friendlycaptcha-frc7Z65R' %}
    {% set friendlycaptchaSitekey = '1234567890' %}
    {% set friendlycaptchaDataLang = 'de' %}
    {% set friendlycaptchaDataPuzzleEndpoint = 'https://eu-api.friendlycaptcha.eu/api/v1/puzzle' %}
    {% set friendlycaptchaDataStart = 'auto' %}

    <div class="{{ 'bsi-element-' ~ friendlycaptchaElementId }} frc-captcha"
        data-bsi-element="{{ friendlycaptchaElementId }}"
        data-sitekey="{{ friendlycaptchaSitekey }}"
        data-lang="{{ friendlycaptchaDataLang }}"
        data-puzzle-endpoint="{{ friendlycaptchaDataPuzzleEndpoint }}"
        data-start="{{ friendlycaptchaDataStart }}">
    </div>

{% endapply %}